{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "es2018",
        ],
        "module": "esnext",
        "isolatedModules": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "jsx": "react",
        "pretty": true,
        "allowJs": false,
        "sourceMap": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "declaration": true,
        "strict": true,
    },
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}